{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "üñºÔ∏è Compile Resources",
            "type": "shell",
            "command": "windres",
            "args": [
                "resources.rc",
                "-O",
                "coff",
                "-o",
                "resources.o"
            ]
        },
        {
            "label": "üì¶ Compile Executable",
            "type": "shell",
            "command": "g++",
            "args": [
                "-municode",
                "-mwindows",
                "main.cpp",
                "resources.o",
                "-o",
                "toggle-desktop-icons.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "üñºÔ∏è Compile Resources"
            ]
        }
    ]
}
